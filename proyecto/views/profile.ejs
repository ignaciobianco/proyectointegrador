<%- include('./partials/head') %>

<% if ((locals.RecordarmeEmail != undefined) || (locals.NombreUsuario != undefined)||(locals.UserName != undefined)) { %>
  <%- include('./partials/headerlogueado') %>
<% }else{ %>
<%- include('./partials/header') %>
<%}%>

<section class="info-usuario container products-wrapper">
    <div class="row">
        <div class="img-container offset-3 col-2">
            <img src="/images/users/<%= info.foto_perfil %>" alt="foto" class="foto-perfil">
        </div>



        <div class="data-container col-6">
            <div class="d-flex align-items-center ">
              <h1 class="main-title"><%= info.email %>
              <% if((locals.RecordarmeEmail == info.email)||(locals.NombreUsuario == info.email)||(locals.UserName == info.email)){ %>
                  <a href="/users/profile-edit">
                          <i class="fas fa-cog"></i>
                      </a>
                  </h1>
                  <% }else{ %>
                <a class="btn mt-3 ml-4" href="">SEGUIR</a>
                <% } %>
            </div>
            <div>
                <ul class="">
                    <li> Productos publicados : <%= info.productos.length %> </li>
                    <li> Comentarios publicados : <%= info.comentarios.length %> </li>

                </ul>
            </div>
        </div>
    </div>
</section>
<!-- /Datos del usuario -->

<!-- Mis productos -->
<div class="container products-wrapper">
    <div class="row">
        <div class="col-12">
            <h2 class="products-title">Productos publicados</h2>
        </div>




        <% for (let i = 0; i < info.productos.length; i++) { %>
          <div class="col-12 col-sm-6 col-lg-3">
            <section class="product-box">
              <a href="/product/<%= info.productos[i].id %>">
                <figure class="product-box_image">
                  <img src="/images/products/<%=info.productos[i].imagen_producto %>">
                </figure>
                <article class="product-box_data">
                  <h2><%= info.productos[i].nombre_producto %></h2>
                  <p><%= info.productos[i].descripcion_producto %></p>
                </article>
              </a>
            </section>
          </div>
        <% } %>





        </div>
      </div>
<%- include('./partials/footer') %>