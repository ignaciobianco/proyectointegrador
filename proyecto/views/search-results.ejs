<%- include('./partials/head') %>

<% if ((locals.RecordarmeEmail != undefined) || (locals.NombreUsuario != undefined)) { %>
  <%- include('./partials/headerlogueado') %>
<% }else{ %>
<%- include('./partials/header') %>
<%}%>



<div class="container products-wrapper">
  <div class="row">
    <% if (productos.length > 0) { %><div class="col-12">
          <h2 class="products-title">Resultados de b√∫squeda para: "<%= query %>"</h2>
      </div>
       
          <% for (let i = 0; i < productos.length; i++) { %>
              <div class="col-12 col-sm-6 col-lg-3">
                  <section class="product-box">
                      <a href="/product">
                          <figure class="product-box_image">
                              <img src="/images/products/<%= productos[i].imagen_producto %>">
                          </figure>
                          <article class="product-box_data">
                              <h2><%= productos[i].nombre_producto %></h2>
                              <p><%= productos[i].descripcion_producto %></p>
                          </article>
                      </a>
                  </section>
              </div>
              <% } %>
              <% } else { %>
                <div class="col-12">
                  <h2 class="products-title">No se encontraron productos que coincidan con el termino: "<%= query %>".</h2>
                </div>
              <% } %>
<%- include('./partials/footer') %>