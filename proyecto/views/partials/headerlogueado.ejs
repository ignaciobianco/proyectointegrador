<header class="main-header">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-5 col-md-2">
                <a href="/" class="main-header_home-link">
                    <img src="/images/logo_p.png">
                </a>
            </div>

            <div class="col-7 col-md-6">
                <form action="/product/search-results/" method="GET" class="search-form" id="searchForm">
                    <input type="text" name="search" placeholder="Buscar productos, marcas y más" class="search-form_input" id="searchInput">
                    <!-- Campo de entrada oculto para capturar el valor del campo de búsqueda -->
                    <input type="hidden" name="clean" id="cleanSearchInput">
                    <button type="submit" class="search-form_button"><i class="fas fa-search"></i></button>
                </form>
            </div>

            <div class="col-12 col-md-4">
                <a class="main-header_credit-link">
                    <% if (locals.NombreUsuario !== undefined) { %>
                        <p><%= locals.NombreUsuario %></p>
                    <% } else if (locals.UserName !== undefined) { %>
                        <p><%= locals.UserName %></p>
                    <% } else if (locals.RecordarmeEmail !== undefined) { %>
                        <p><%= locals.RecordarmeEmail %></p>
                        <% } %>



                </a>
            </div>
        </div>

        <button class="btn-toggle-navbar">
            <i class="fas fa-bars"></i>
        </button>

        <nav class="main-navbar">
            <ul class="left-navbar">
                <li><a href="/">Todos los productos</a></li>
                <li><a href="/product/product-add/">Cargar productos</a></li>
            </ul>

            <ul class="right-navbar">
                <li><a href="/users/profile/">
                    <% if (locals.NombreUsuario !== undefined) { %>
                        <p><%= locals.NombreUsuario %></p>
                    <% } else if (locals.UserName !== undefined) { %>
                        <p><%= locals.UserName %></p>
                    <% } else if (locals.RecordarmeEmail !== undefined) { %>
                        <p><%= locals.RecordarmeEmail %></p>
                        <% } %>
                </a></li>
                <li>
                    <form action="/users/logout" method="POST">
                        
                        <button type="submit">Cerrar Sesión <i class="fas fa-sign-in-alt"> </i></button>
                    </form>
                </li>
                <!-- Solo deslogueado <li>
                    <a href="register.html">Creá tu cuenta <i class="far fa-address-card"></i>
                    </a>
                </li>
                <li>
                    <a href="login.html">Ingresá <i class="fas fa-sign-in-alt"></i></a>
                </li> -->
            </ul>
        </nav>
    </div>
</header>