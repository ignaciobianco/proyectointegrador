<%- include('./partials/head') %>

<% if ((locals.RecordarmeEmail != undefined) || (locals.NombreUsuario != undefined)||(locals.UserName != undefined)) { %>
  <%- include('./partials/headerlogueado') %>
<% }else{ %>
<%- include('./partials/header') %>
<%}%>

<div class="container products-wrapper">
		<div class="row">
			<div class="col-12">
				<h2 class="products-title">Editar mi perfil</h2>
			</div>
			<!-- Show the "ultimos" products -->
			<h2 class="col-12">

				<% if (locals.errors && errors.email) { %>
					<p class="feedback"><%= errors.email.msg %></p>
				<% } %>
				<% if(locals.errors && errors.contraseña){ %>
					<p><%= errors.contraseña.msg %></p>
				  <% } %>
				  <% if(locals.errors && errors.fecha_nacimiento){ %>
					<p><%= errors.fecha_nacimiento.msg %></p>
				  <% } %>
				  <% if(locals.errors && errors.dni){ %>
					<p><%= errors.dni.msg %></p>
				  <% } %>

				<br>
				<br>
				<form action="" method="POST">
					<div>
						<label for="email">Email:</label>
						<input type="email" id="email" name="email" value="<%=info.email%>">
					</div>
					<br>
					<br>
					
					<div>
						<label for="fecha_nacimiento">Fecha de nacimiento:</label>
						<% console.log(info.fecha); %>
						<input type="date" id="fecha_nacimiento" name="fecha_nacimiento" value="<%=info.fecha %>">
					</div>
					<br>
					<br>
					<div>
						<label for="numero_documento">Número de documento:</label>
						<input type="text" id="numero_documento" name="dni" value="<%= info.dni %>">
					</div>	

					<div>
						<label for="nueva_contraseña">Nueva contraseña:</label>
						<input type="password" id="nueva_contraseña" name="contraseña">
					</div>
					<br>
					<button type="submit">Cambiar Datos</button>

				</form>
				
				
			

					
					

			</h2>
<%- include('./partials/footer') %>